@model IEnumerable<OrderClient.Models.Clients.Client>

@{
    ViewData["Title"] = "Index";
}

<h1>Клиенты</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Создать нового клиента</a>
</p>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Имя</th>
                <th>Фамилия</th>
                <th>Телефон</th>
                <th>Кол-во заказов</th>
                <th>Дата добавления</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.FirstName</td>
                <td>@item.SecondName</td>
                <td>@item.PhoneNum</td>
                <td>@item.OrderAmount</td>
                <td>@item.DateAdd.ToShortDateString()</td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.ID">Редактировать</a>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.ID">Подробнее</a>
                    <a class="btn btn-danger btn-delete" asp-action="Delete" asp-route-id="@item.ID" data-client-name="@item.FirstName">Удалить</a>
                    <a class="btn btn-success" asp-action="OrdersByClient" asp-route-id="@item.ID"
                       asp-route-clientName="@item.FirstName">Заказы</a>
                </td>
            </tr>
        }
        </tbody>
        </table>
                       
    </div>






